<!--MAIN-->
WindowManager:
    CalculatorWindow:
        id: calculatorwindow
   
<CalculatorWindow>
    operationtext: operationtext
    name: "main"

    canvas.before:
        Color:
            rgba: 0, 0.01, 0.1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        padding: 2
        spacing: 4

        Label:
            id: operationtext
            text: "0"
            font_size: self.width/20
            valign: 'middle'
            padding_y: 100
            size_hint_y: None

        GridLayout:
            cols: 5

            Button:
                text: "1"
                font_size: 30
                on_release:
                    root.calc_operation('1')
            Button:
                text: "2"
                font_size: 30
                on_release:
                    root.calc_operation('2')
            Button:
                text: "3"
                font_size: 30
                on_release:
                    root.calc_operation('3')
            Button:
                text: "+"
                font_size: 30
                on_release:
                    root.calc_operation('+')
            Button:
                text: "*"
                font_size: 30
                on_release:
                    root.calc_operation('*')
            Button:
                text: "4"
                font_size: 30
                on_release:
                    root.calc_operation('4')
            Button:
                text: "5"
                font_size: 30
                on_release:
                    root.calc_operation('5')
            Button:
                text: "6"
                font_size: 30
                on_release:
                    root.calc_operation('6')
            Button:
                text: "-"
                font_size: 30
                on_release:
                    root.calc_operation('-')
            Button:
                text: "/"
                font_size: 30
                on_release:
                    root.calc_operation('/')
            Button:
                text: "7"
                font_size: 30
                on_release:
                    root.calc_operation('7')
            Button:
                text: "8"
                font_size: 30
                on_release:
                    root.calc_operation('8')
            Button:
                text: "9"
                font_size: 30
                on_release:
                    root.calc_operation('9')
            Label:
            Label:
            Button:
                text: "0"
                font_size: 30
                on_release:
                    root.calc_operation('0')
            Button:
                text: "."
                font_size: 30
                on_release:
                    root.calc_operation('.')
            Button:
                text: "C"
                font_size: 30
                on_release:
                    root.calc_operation('C')
            Widget:
                Button:
                    y: placeholder.y
                    x: self.parent.x
                    width: self.parent.width + placeholder.width
                    height: self.parent.height + placeholder.height
                    text: '='
                    font_size: 30
                    on_release:
                        root.calc_operation('=')
            Widget:
                id: placeholder